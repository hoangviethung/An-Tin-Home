@using MainProject.Core.Enums
@model MainProject.SBussiness.LandingPage.Models.Contact.ContactManageModel

@using (Html.BeginForm())
{
    <input name="g-recaptcha-response" hidden>
    <div class="form-group">
        @Html.TextBoxFor(d => d.Name, new { @class = "form-control name", placeholder = Html.GetResource(ResourceKeyCollection.Contact_Form_Name) + "*" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(d => d.Email, new { @class = "form-control email", placeholder = Html.GetResource(ResourceKeyCollection.Contact_Form_Email) + "*" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(d => d.Phone, new { @class = "form-control phone-number", placeholder = Html.GetResource(ResourceKeyCollection.Contact_Form_Phone) + "*" })
    </div>
    <div class="form-group">
        @Html.TextAreaFor(d => d.Content, new { @class = "form-control content", placeholder = Html.GetResource(ResourceKeyCollection.Contact_Form_Content) + "*" })
    </div>
    <div class="block-recaptcha-submit">
        <div class="recaptcha"><img src="/content/resources/assets/recaptcha.gif" alt="" srcset=""></div>
        <div class="submit">
            <button class="btn read-more main-color" data-url="/dang-ky">@Html.GetResource(ResourceKeyCollection.Contact_Success)</button>
        </div>
    </div>
}


