@using MainProject.Core.Enums
@model MainProject.SBussiness.LandingPage.Models.Home.HeaderViewModel

<div id="loading">
    <div class="logo-loader"><img src="/content/resources/assets/logo.png"></div>
    <div class="progstat-wrapper">Loading:<span id="progstat">0</span>%</div>
    <div id="progress"></div>
</div>
<header>
    <div class="logo"><a href="/"><img src="/content/resources/assets/logo.png" alt="" srcset=""></a></div>
    <div class="toggle-menu mobile"></div>
    <div class="main-nav">
        <div class="container">
            <div class="row no-gutters ai-c">
                <ul class="language">
                    <li class="active"><a href="#"><img class="ofcv" src="/content/resources/assets/icons/vn.svg" alt=""></a></li>
                    <li><a href="#"><img class="ofcv" src="/content/resources/assets/icons/en.svg" alt=""></a></li>
                </ul>
                @Html.Raw(Model.MainMenu)
                <div class="search"><img src="/content/resources/assets/icons/search.svg" alt=""></div>
                <div class="block-form-search">
                    <form action="/search">
                        <div class="form-group">
                            <input class="form-control" name="text" type="text" placeholder="@Html.GetResource(ResourceKeyCollection.Search_Input)">
                        </div>
                        <div class="submit">
                            <button>@Html.GetResource(ResourceKeyCollection.Search_Button)</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>
<section class="main-banner">
    <div class="block-main-banner">
        <div class="swiper-container">
            <div class="swiper-wrapper">
                @foreach (var item in Model.Banners)
                {
                    <div class="swiper-slide">
                        <div class="img ov-h"><img class="ofcv" src="@item.ResourcePath" alt="@item.Alt"></div>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>
