@using MainProject.Core
@using MainProject.Core.Enums
@model MainProject.SBussiness.LandingPage.Models.News.NewsViewModel

<section class="news">
    <div class="container">
        <div class="block-title">
            <h2 class="wow fadeInDown" data-wow-delay=".2s">@Model.Category.Title</h2>
            <h3 class="wow fadeInUp" data-wow-delay=".2s">@Html.GetResource(ResourceKeyCollection.News_Description)</h3>
            <p class="lcl lcl-2">
                @Model.Category.Description
            </p>
        </div>
        <div class="list-news">
            @foreach (var item in Model.Articles)
            {
                <div class="item-news wow fadeIn" data-wow-delay=".2s">
                    <div class="img ov-h" data-getHeight><a href="@item.GetUrl()"><img class="ofcv" src="@item.ImageDefault" alt="@item.Title"></a></div>
                    <div class="content ov-h" data-setHeight="575.98">
                        <h3 class="lcl lcl-2">@item.Title</h3>
                        <p class="lcl lcl-5">@item.Description</p>
                        <a class="btn read-more main-color" href="@item.GetUrl()">
                            @Html.GetResource(ResourceKeyCollection.Read_More)
                        </a>
                    </div>
                </div>
            }
        </div>
        @Html.RenderPaging(Model.PagingModel, new MainProject.Framework.Models.PagingStyleModel
        {
            DivContainerStyle = "class=pagination",
            CurrentItemStyle = "class=active"
        })
    </div>
</section>
