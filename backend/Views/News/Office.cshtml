@using MainProject.Core
@using MainProject.Core.Enums
@model MainProject.SBussiness.LandingPage.Models.News.OfficeViewModel

<section class="offices">
    <div class="block-title">
        <h2 class="wow fadeInDown" data-wow-delay=".2s">@Model.OfficeCategory.Title</h2>
        <h3 class="wow fadeInUp" data-wow-delay=".2s">@Html.GetResource(TempResourceKeyCollection.An_Tin_Home)</h3>
        <p class="lcl lcl-2">
            @Model.OfficeCategory.Description
        </p>
    </div>
    <div class="container">
        <div class="slider-projects">
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @foreach (var item in Model.Offices)
                    {
                        <div class="swiper-slide">
                            <div class="item-office">
                                <a href="@item.GetUrl()">
                                    <figure>
                                        <div class="img ov-h"><img class="ofcv" src="@item.ImageDefault"></div>
                                        <figcaption>
                                            <div class="project-info">
                                                <div class="name">@item.Title</div>
                                                <a class="btn read-more main-color" href="@item.GetUrl()">
                                                    @Html.GetResource(TempResourceKeyCollection.Read_More)
                                                </a>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
</section>
